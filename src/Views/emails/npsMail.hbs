<style type="text/css">
  .container { display: flex; align-content: center; align-items: center; flex-direction: column; max-width: 800px; height: auto; overflow: hidden; margin: 0 auto; padding: 1rem 0; }
  .container label { width: auto; height: auto; overflow: hidden; margin: 0; padding: 0; font-size: 1rem; }
  .container label strong { color: #8257e6; }
  .container h3 { width: auto; height: auto; overflow: hidden; margin: 1.5rem 0 1rem 0; padding: 0; font-size: 1.25rem; text-transform: uppercase; }
  .container .level { display: flex; justify-content: center; align-items: center; width: 100%; height: auto; overflow: hidden; margin-top: 1rem; }
  .container .level span { cursor: pointer; outline: none; display: flex; justify-content: space-between; width: auto; height: auto; overflow: hidden; margin: 0 1.5rem; padding: 6px 16px; border: 1px solid #8257e6; color: #8257e6; border-radius: 35px; }
  .container .level span:hover,
  .container .level span:active,
  .container .level span:focus { color: #FFFFFF; background-color: #8257e6; }
  .container .answers { display: flex; justify-content: space-between; width: 100%; height: auto; overflow: hidden; margin: 2rem auto; }
  .container .answers .value { float: left; width: 9%; height: auto; overflow: hidden; margin: 0; padding: 1rem 0; text-align: center; border-radius: 6px; border: 0; text-decoration: none; background-color: #8257e6; color: #FFFFFF; font-size: 2rem; font-weight: 600; }
  .container .answers .value:hover,
  .container .answers .value:active, 
  .container .answers .value:focus { background: #672dee; }
</style>

<div class="container">
  <label>Olá <strong>{{ name }}</strong>!</label>

  <h3>{{ title }}</h3>
  <br>
  <strong>{{ description }}</strong>

  <div class="level">
    <span>Pouco provável</span>
    <span>Mais ou menos provável</span>
    <span>Muito provável</span>
    <span>Totalmente Provável</span>
  </div>

  <div class="answers">
    <a class="value" href="{{link}}/1?u={{id}}">1</a>
    <a class="value" href="{{link}}/2?u={{id}}">2</a>
    <a class="value" href="{{link}}/3?u={{id}}">3</a>
    <a class="value" href="{{link}}/3?u={{id}}">4</a>
    <a class="value" href="{{link}}/5?u={{id}}">5</a>
    <a class="value" href="{{link}}/6?u={{id}}">6</a>
    <a class="value" href="{{link}}/7?u={{id}}">7</a>
    <a class="value" href="{{link}}/8?u={{id}}">8</a>
    <a class="value" href="{{link}}/9?u={{id}}">9</a>
    <a class="value" href="{{link}}/10?u={{id}}">10</a>
  </div>

  <br><br>

  <strong>Sua opinião é muito importante para nós</strong>
  <h3>Equipe NLW 04</h3>
</div>